{
    "name": "@rimac-technology/semantic-release-monorepo",
    "version": "1.0.0",
    "description": "Enhanced semantic-release by enabling simplified and automatic package publishing in multi-package repositories",
    "keywords": [
        "release",
        "semantic-release",
        "monorepo"
    ],
    "repository": "git@github.com:RimacTechnology/semantic-release-monorepo.git",
    "license": "MIT",
    "author": "Rimac Technology d.o.o.",
    "type": "module",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "cm": "cz",
        "postinstall": "husky install",
        "lint": "yarn lint:cspell && yarn lint:prettier && yarn lint:package-json && yarn lint:eslint",
        "lint:cspell": "cspell --no-progress --unique --no-summary '**'",
        "lint:eslint": "eslint './' --quiet --cache",
        "lint:fix": "yarn lint:prettier --write && yarn lint:eslint --fix",
        "lint:package-json": "npmPkgJsonLint --configFile .packagerc.cjs .",
        "lint:prettier": "prettier --log-level warn --check './**/*{yaml,yml,json,md,graphql}'",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "release": "semantic-release"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "p-limit": "^5.0.0",
        "package-up": "^5.0.0",
        "read-pkg": "^9.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3",
        "@rimac-technology/style-guide": "^9.2.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^11.1.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^9.2.5",
        "@semantic-release/npm": "^11.0.2",
        "@semantic-release/release-notes-generator": "^12.1.0",
        "@types/node": "^20.10.4",
        "commitizen": "^4.3.0",
        "conventional-changelog-conventionalcommits": "^7.0.2",
        "cspell": "^8.1.3",
        "eslint": "^8.55.0",
        "husky": "^8.0.3",
        "npm-package-json-lint": "^7.1.0",
        "pinst": "^3.0.0",
        "prettier": "^3.1.0",
        "semantic-release": "^22.0.10",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    },
    "peerDependencies": {
        "semantic-release": ">=20"
    },
    "packageManager": "yarn@4.0.2",
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public"
    }
}
